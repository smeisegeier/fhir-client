@using System.Linq;
@model List<Hl7.Fhir.Model.Organization>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Active
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @if (Model == null || !Model.Any())
        {
          <tr><td colspan="4">EMPTY LIST</td></tr>
        }
        else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(i => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(i => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(i => item.Active)
                        </td>
                        <td>
                            <a asp-controller="Organization" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-controller="Organization" asp-action="ToJson" asp-route-id="@item.Id" class="btn btn-info btn-sm">json</a>
                            <a asp-controller="Organization" asp-action="ToXml" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">xml</a>
                            <a asp-controller="Organization" asp-action="WriteToXml" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">file</a>
                            <a asp-controller="Organization" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Really delete?');">Delete</a>
@*                          @Html.ActionLink("Edit", "PatientEdit", new { id = item.Id }) |
                            @Html.ActionLink("Json", "ToJson", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "PatientDelete", new { id = item.Id }, new { onclick = "return confirm('Really delete?');" })
*@
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a asp-controller="Patient" asp-action="Create" class="btn btn-primary">Create Patient</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Index</a>
</div>
