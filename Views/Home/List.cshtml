@using System.Linq;
@model FhirClient.Viewmodels.ListViewmodel

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Gender
            </th>
            <th>
                Active
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if ( Model.PatientsCollection == null || !Model.PatientsCollection.Any())
    {
      <tr><td colspan="4">EMPTY LIST</td></tr>
    }
    else
        {
            @foreach (var item in Model.PatientsCollection)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(i => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(i => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(i => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(i => item.Active)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
